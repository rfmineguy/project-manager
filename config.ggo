package "projman"
version "0.1"
purpose "Manage where projects are located on the system"
usage "projman <options>"
description "Manage where projects are located on the system"

option "list" l "List projects" flag off

section "Register project"
option "register" - "Register a new project" flag off
option "name" n "Project name" string dependon="register" optional
option "path" p "Project path" string dependon="register" optional
